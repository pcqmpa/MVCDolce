@model MVCDolce.Models.RecuperarPassword
@{
    ViewBag.Title = "RecuperarPassword";

    var mensaje = (ViewBag.mensaje == null) ? string.Empty : ViewBag.mensaje;
    var error = (ViewBag.Error == null) ? string.Empty : ViewBag.Error;

}

@Html.Hidden("mensaje",(object)mensaje)
@Html.Hidden("Mensaje_error",(object)error)

<div class="container">
    <form action="~/Seguridad/RecuperarPassword" method="post">

        <h2>Recuperacion de Password</h2>

        <div class="section">
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.StrCedula,new {@class= "validate" } )
                @Html.LabelFor(x => x.StrCedula )
                @Html.ValidationMessageFor(x => x.StrCedula )
            </div>
        </div>
        
        <div class="section">
            <div class="input-field col s12">
                @Html.TextBoxFor(x => x.StrEmail, new { @class = "validate" })
                @Html.LabelFor(x => x.StrEmail )
                @Html.ValidationMessageFor(x => x.StrEmail)
            </div>
        </div>


        <div class="section">
            <button type="submit" class="btn-add btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></button>
        </div> 

    </form>
</div>

@section scripts
    {
      
        <script src="~/Scripts/Seguridad.js"></script>
    }