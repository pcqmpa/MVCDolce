@model  MVCDolce.Models.CabioPassword
@{
    ViewBag.Title = "Cambio de Password";
    var mensaje = (ViewBag.mensaje == null) ? string.Empty : ViewBag.mensaje;
    var error = (ViewBag.Error == null) ? string.Empty : ViewBag.Error;
}


@Html.Hidden("mensaje", (object)mensaje)
@Html.Hidden("Mensaje_error", (object)error)

<div class="container">
    <form action="~/Seguridad/CambioPassword" method="post">
        <h2>Cambio de Password</h2>

        <div class="section">

            <div class="input-field col s12">
                @Html.PasswordFor(x => x.StrPasswordAnterior, new { @class = "validate" })       
                @Html.LabelFor(x => x.StrPasswordAnterior)
                @Html.ValidationMessageFor(x => x.StrPasswordAnterior )
            </div>

        </div>
        
        <div class="section">

            <div class="input-field col s12">
                @Html.PasswordFor(x => x.StrPaswordNew, new { @class = "validate" })
                @Html.LabelFor(x => x.StrPaswordNew)
                @Html.ValidationMessageFor(x => x.StrPaswordNew)
            </div>

        </div>

        <div class="section">

            <div class="input-field col s12">
                @Html.PasswordFor(x => x.StrConfirmarPassword, new { @class = "validate" })
                @Html.LabelFor(x => x.StrConfirmarPassword)
                @Html.ValidationMessageFor(x => x.StrConfirmarPassword)
            </div>

        </div>

        <div class="section">
            <button type="submit" class="btn-add btn-floating btn-large waves-effect waves-light red"><i class="material-icons">add</i></button>
        </div> 

    </form>
</div>


@section scripts
    {

    <script src="~/Scripts/Seguridad.js"></script>
}